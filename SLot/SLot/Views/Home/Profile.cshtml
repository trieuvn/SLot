@model SLot.Models.UserProfileViewModel
@{
    ViewBag.Title = "Profile";
}

<div class="container pt-4">
    <div class="text-center mb-4">
        <i class="bi bi-person-circle" style="font-size: 80px; color: #6c757d;"></i>
        <h4>@Model.UserName</h4>
        <p class="text-muted">@Model.Email</p>
    </div>

    <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <p class="mb-0 text-muted">Số dư tài khoản</p>
                <h5 class="mb-0">@Model.Balance.ToString("N0") VNĐ</h5>
            </div>
            <i class="bi bi-wallet2" style="font-size: 24px;"></i>
        </div>
    </div>

    <div class="list-group">
        <a href="@Url.Action("LockedFeature", "Home")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Chỉnh sửa thông tin
            <i class="bi bi-chevron-right"></i>
        </a>

        <a href="@Url.Action("LockedFeature", "Home")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Chọn ngôn ngữ
            <i class="bi bi-chevron-right"></i>
        </a>

        <a href="@Url.Action("LockedFeature", "Home")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Trợ giúp
            <i class="bi bi-chevron-right"></i>
        </a>

        <a href="@Url.Action("LockedFeature", "Home")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Thông tin hệ thống
            <i class="bi bi-chevron-right"></i>
        </a>
        <a href="#" class="list-group-item list-group-item-action text-danger">
            Đăng xuất
        </a>
    </div>
</div>