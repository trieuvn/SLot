@{
    ViewBag.Title = "Ví thanh toán";
    var model = Model as SLot.Models.WalletViewModel;
    Layout = null;
}
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<style>
    .transaction-amount.positive {
        color: #10b981; /* xanh lá */
    }

    .transaction-amount.negative {
        color: #ef4444; /* đỏ */
    }

    /* -------------------------------------------------
       ------------------------------------------------- */
    body {font-family:'Roboto',sans-serif;background:#f8f9fa;margin:0;padding:0;}
    .container {padding:20px;}
    .header {display:flex;align-items:center;margin-bottom:20px;}
    .back-btn {background:none;border:none;color:#1e3a8a;font-size:50px;font-weight:600;display:flex;align-items:center;text-decoration:none;}
    .back-btn span {font-size:50px;margin-left:6px;}

    /* ==================== THẺ SỐ DƯ ==================== */
    .balance-card {
        position:relative;
        width:100%;height:700px;
        margin:0 auto 20px;
        border-radius:20px;
        overflow:hidden;
        box-shadow:0 10px 25px rgba(0,0,0,.2);
        transition:transform .3s ease,box-shadow .3s ease;
        font-family:'Helvetica Neue',Arial,sans-serif;
        color:#fff;
        background:linear-gradient(135deg,#1e3a8a,#1e40af,#3b82f6);
        background-size:200% 200%;
        animation:gradientFlow 12s ease infinite;
        padding:40px;
        box-sizing:border-box;
        cursor:pointer;
    }
    .balance-card:hover{
        transform:translateY(-6px);
        box-shadow:0 20px 40px rgba(0,0,0,.3);
    }

    /* ---------- ANIMATION (đặt ngoài Razor) ---------- */
</style>


<style>
    /* ---------- CHIP & NFC ---------- */
    .balance-card::before {
        content: '';
        position: absolute;
        top: 60px;
        left: 50px;
        width: 70px;
        height: 55px;
        background: linear-gradient(45deg,#ffd700,#f9e28c,#ffd700);
        border-radius: 8px;
        box-shadow: inset 0 0 8px rgba(0,0,0,.3),0 2px 5px rgba(0,0,0,.2);
        z-index: 2;
    }

    .balance-card::after {
        content: '⟪⟫';
        position: absolute;
        top: 70px;
        left: 140px;
        font-size: 36px;
        color: rgba(255,255,255,.75);
        font-weight: bold;
        letter-spacing: -3px;
        transform: rotate(90deg);
        z-index: 2;
    }

    /* ---------- LOGO, SỐ THẺ, … ---------- */
    .card-logo {
        position: absolute;
        top: 50px;
        right: 50px;
        font-weight: bold;
        font-size: 28px;
        letter-spacing: 1.5px;
        color: rgba(255,255,255,.95);
        text-shadow: 0 1px 3px rgba(0,0,0,.4);
        z-index: 2;
    }

    .card-number {
        position: absolute;
        bottom: 180px;
        left: 50px;
        font-size: 60px;
        letter-spacing: 4px;
        font-weight: 500;
        text-shadow: 0 1px 3px rgba(0,0,0,.4);
        z-index: 2;
    }

    .card-holder-info {
        position: absolute;
        bottom: 100px;
        left: 50px;
        display: flex;
        justify-content: space-between;
        width: calc(100% - 100px);
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        z-index: 2;
    }

    .card-holder {
        font-weight: 500;
        font-size:30px;
    }

    .card-expiry {
        text-align: right;
        font-weight: 500;
    }

    .card-brand {
        position: absolute;
        bottom: 50px;
        right: 50px;
        font-size: 48px;
        font-weight: bold;
        color: #fff;
        text-shadow: 0 2px 4px rgba(0,0,0,.5);
        z-index: 2;
    }

    .balance-info {
        position: absolute;
        bottom: 280px;
        left: 50px;
        z-index: 2;
    }

    .balance-amount {
        font-size: 120px;
        font-weight: 600;
        margin: 0;
        letter-spacing: 1px;
        text-shadow: 0 2px 4px rgba(0,0,0,.3);
    }

    .balance-label {
        margin: 8px 0 0;
        font-size: 50px;
        opacity: .9;
        letter-spacing: 1px;
    }

    /* ==================== NÚT HÀNH ĐỘNG ==================== */
    .action-buttons {
        display: flex;
        gap: 12px;
        margin-bottom: 30px;
    }

    .btn {
        flex: 1;
        padding: 14px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
        transition: all .2s;
        font-size: 60px;
    }

    .btn-deposit {
        background: #1e40af;
        color: #fff;
    }

    .btn-withdraw {
        background: #fff;
        color: #1e40af;
        border: 1.5px solid #e5e7eb;
    }

    .btn:active {
        transform: scale(.98);
    }

    /* ==================== LỊCH SỬ GIAO DỊCH ==================== */
    .history-title {
        font-size: 60px;
        font-weight: 600;
        margin: 0 0 16px;
        color: #1f2937;
    }

    .transaction-item {
        display: flex;
        align-items: center;
        padding: 16px 0;
        border-bottom: 1px solid #e5e7eb;
        height:150px;
    }

    .transaction-icon {
        font-size: 24px;
        margin-right: 12px;
    }

    .transaction-details {
        flex: 1;
    }

    .transaction-type {
        font-weight: 500;
        color: #1f2937;
        margin: 0;
        font-size:50px;
    }

    .transaction-time {
        font-size: 30px;
        color: #6b7280;
        margin: 4px 0 0;
    }

    .transaction-amount {
        font-size: 50px;
        font-weight: 600;
        color: #10b981;
    }
    .back-btn-gradient {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 20px 40px;
        font-size: 50px;
        font-weight: 700;
        color: white;
        text-decoration: none;
        border: none;
        border-radius: 16px;
        background: linear-gradient(135deg, #2563eb, #3b82f6, #60a5fa);
        background-size: 200% 200%;
        animation: gradientShift 5s ease infinite;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .back-btn-gradient:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.35);
            background-position: right center;
        }
</style>

<div class="container">
    <!-- Nút quay lại -->
    <div class="header">
        <a href="/Home/Profile" class="back-btn-gradient">
            ← Quay lại
        </a>
    </div>

    <!-- Thẻ số dư -->
    <div class="balance-card">
        <div class="card-logo">MYBANK</div>
        <div class="balance-info">
            <h1 class="balance-amount">@string.Format("{0:N0} đ", model.Balance)</h1>
            <p class="balance-label">Tổng số dư</p>
        </div>
        <div class="card-number">1234 5678 9012 3456</div>
        <div class="card-holder-info">
            <div class="card-holder">NGUYEN VAN A</div>
            <div class="card-expiry">12/27</div>
        </div>
        <div class="card-brand">VISA</div>
    </div>

    <!-- Nút hành động -->
    <div class="action-buttons">
        <a href="#" class="btn btn-deposit">
            <img src="@Url.Content("~/Content/img/wallet_nap_icon.svg")" alt="Nạp tiền" style="width:130px;"> Nạp tiền
        </a>
        <a href="#" class="btn btn-withdraw">
            <img src="@Url.Content("~/Content/img/wallet_rut_icon.svg")" alt="Rút tiền" style="width:130px;"> Rút tiền
        </a>
    </div>

    <!-- Lịch sử -->
    <h3 class="history-title">Lịch sử</h3>
    @if (model.Transactions.Any())
    {
        foreach (var tx in model.Transactions)
        {
            <div class="transaction-item">
                <div class="transaction-icon">
                    <img src="@Url.Content("~/Content/img/Money.png")" style="width:80px;" />
                </div>
                <div class="transaction-details">
                    <p class="transaction-type">@tx.Type</p>
                    <p class="transaction-time">@tx.DateTime</p>
                </div>
                <div class="transaction-amount @(tx.Amount < 0 ? "negative" : "positive")">
                    @string.Format("{0:N0} đ", tx.Amount)
                </div>
            </div>
        }
    }
    else
    {
        <p style="text-align:center;color:#9ca3af;padding:20px 0;">Chưa có giao dịch nào</p>
    }
</div>