<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title - SLot Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="mobile-frame">

        <nav class="navbar navbar-light bg-light border-bottom">
            <div class="top-nav-profile">
                <i class="bi bi-person-circle avatar"></i>

                <div class="user-info">
                    <span class="welcome-text">Xin chào,</span>
                    <p class="user-name">Demo User</p>
                </div>
            </div>

            <a class="notification-bell" href="@Url.Action("Notifications", "Home")">
                <i class="bi bi-bell"></i>
                @if (TempData["NotificationCount"] != null)
                {
                    <span class="badge badge-danger notification-badge">@TempData["NotificationCount"]</span>
                }
            </a>
        </nav>

        <div class="main-content">
            @RenderBody()
        </div>

        <nav class="navbar navbar-light bg-light border-top fixed-bottom-nav">
            <a class="nav-item nav-link d-flex flex-column align-items-center @(ViewBag.Title == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">
                <i class="bi bi-house"></i>
                <span class="nav-label">Home</span>
            </a>
            <a class="nav-item nav-link d-flex flex-column align-items-center @(ViewBag.Title == "Booking" ? "active" : "")" href="@Url.Action("Booking", "Home")">
                <i class="bi bi-calendar-check"></i>
                <span class="nav-label">Đặt chỗ</span>
            </a>
            <a class="nav-item nav-link d-flex flex-column align-items-center @(ViewBag.Title == "History" ? "active" : "")" href="@Url.Action("History", "Home")">
                <i class="bi bi-clock-history"></i>
                <span class="nav-label">History</span>
            </a>
            <a class="nav-item nav-link d-flex flex-column align-items-center @(ViewBag.Title == "Profile" ? "active" : "")" href="@Url.Action("Profile", "Home")">
                <i class="bi bi-person"></i>
                <span class="nav-label">Profile</span>
            </a>
        </nav>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>